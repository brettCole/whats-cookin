<%= form_for @recipe, :url => { :action => "create" }, class: "@form" do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>



  <%= f.label :directions %>
  <%= f.text_area :directions %><br>

  <%= f.label :vegan %>
  <%= f.check_box :vegan %><br>

  <%= f.submit %>
<% end %>
